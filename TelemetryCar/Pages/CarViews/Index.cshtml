@page
@model TelemetryCar.Pages.CarViews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarModel[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel[0].Typ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel[0].CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel[0].ModifiedAt)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CarModel)
    {
        <tr>
            <td>
                <a asp-area="" asp-page="/TelemetryViews/Index" asp-route-SearchString="@item.Name">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Typ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdCar">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdCar">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdCar">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>